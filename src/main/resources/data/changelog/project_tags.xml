<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="nnigmat">
        <createTable tableName="project_tags">
            <column name="project_id"  type="bigint">
                <constraints nullable="false" foreignKeyName="fk_project_account" references="project(id)"></constraints>
            </column>
            <column name="tag" type="varchar(128)">
                <constraints nullable="false"></constraints>
            </column>
        </createTable>

        <addPrimaryKey tableName="project_tags" columnNames="project_id, tag"></addPrimaryKey>
    </changeSet>

</databaseChangeLog>
